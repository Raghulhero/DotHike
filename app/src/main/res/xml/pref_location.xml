<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="location_filter_accuracy"
        android:title="@string/pref_location_filter_title"
        android:summary="Caution! Use Wisely!"
        android:defaultValue="40"/>
    <ListPreference
        android:key="location_permission"
        android:title="@string/pref_location_update_title"
        android:defaultValue="100"
        android:entries="@array/pref_location_update_choices"
        android:entryValues="@array/pref_location_update_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <Preference android:title="@string/pref_location_android">
        <intent android:action="android.settings.LOCATION_SOURCE_SETTINGS" />
    </Preference>

</PreferenceScreen>
